<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      alignment="TOP_RIGHT" spacing="10">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
      <padding>
        <Insets top="5" right="5" bottom="5" left="15" />
      </padding>
      <HBox spacing="0.5" alignment="CENTER_LEFT">
        <Label fx:id="id" styleClass="cell_big_label">
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
        <Label fx:id="name" text="\$first" styleClass="cell_big_label" />
      </HBox>
      <FlowPane fx:id="tags" />
      <Label fx:id="phone" styleClass="cell_small_label" text="\$phone" />
      <Label fx:id="address" styleClass="cell_small_label" text="\$address" />
      <Label fx:id="email" styleClass="cell_small_label" text="\$email" />
      <Label fx:id="note" styleClass="cell_small_label" text="\$Note" />
      <Label fx:id="schedule" styleClass="cell_small_label" text="\$schedule" />
      <Label fx:id="cost" styleClass="cell_small_label" text="\$cost" />
      <Label fx:id="tagsLine" styleClass="cell_small_label" text="$tags" />
      <VBox fx:id="parentsContainer">
        <Label text="Parents:" styleClass="list_label" />
        <FlowPane fx:id="parents" hgap="5" vgap="5" />
      </VBox>
      <VBox fx:id="childrenContainer">
        <Label text="Children:" styleClass="list_label" />
        <FlowPane fx:id="children" hgap="5" vgap="5"/>
      </VBox>

    </VBox>
  </GridPane>
  <VBox alignment="TOP_RIGHT" spacing="6" fillWidth="true">
    <padding>
      <Insets top="18" right="0" bottom="12" left="0" />
    </padding>
    <HBox alignment="CENTER_RIGHT" spacing="8" maxWidth="Infinity">
      <Region HBox.hgrow="ALWAYS" />
      <Label fx:id="paidCaption" styleClass="paid-tag" text="Paid" />
      <CheckBox fx:id="paidStatus" disable="true" focusTraversable="false" />
    </HBox>
  </VBox>
</HBox>
